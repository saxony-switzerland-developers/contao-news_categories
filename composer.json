{
    "name": "codefog/contao-news_categories",
    "description": "News Categories bundle for Contao Open Source CMS",
    "keywords": ["contao", "news", "categories"],
    "type": "contao-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Codefog",
            "homepage": "https://codefog.pl"
        }
    ],
    "require": {
        "php": "^8.0",
        "contao/core-bundle": "^5.0",
        "codefog/contao-haste": "^4.17 | ^5.0",
        "contao/news-bundle": "^4.4 | ^5.0",
        "doctrine/dbal": "^2.11 || ^3"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.0",
        "friendsofphp/php-cs-fixer": "^2.2",
        "terminal42/contao-changelanguage": "dev-haste-5"
    },
    "suggest": {
        "terminal42/contao-changelanguage": "dev-haste-5"
    },
    "conflict": {
        "contao/manager-plugin": "<2.0 || >=3.0"
    },
    "autoload": {
        "psr-4": {
            "Codefog\\NewsCategoriesBundle\\": "src"
        }
    },
    "extra": {
        "contao-manager-plugin": "Codefog\\NewsCategoriesBundle\\ContaoManager\\Plugin"
    },
    "replace": {
        "contao-legacy/news_categories": "self.version"
    },
    "config": {
        "allow-plugins": {
            "contao-components/installer": true,
            "contao-community-alliance/composer-plugin": true,
            "contao/manager-plugin": true
        }
    }
}
